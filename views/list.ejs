
<%- include("header") -%>
   

    <div class="box" id="heading">
        <h1 style="color:rgb(48, 17, 223);"><%= listType %></h1>
    </div>
    
    <div class="box" >
        <% for(var x = 0; x < newListItems.length; x++){ %>
        <div class="item">
            <input type="checkbox">
            <!-- loop through array being passed.  -->
            <p><%= newListItems[x] %></p>
            
        </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newName" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listType %>>+</button>
        </form>

    </div>

<%- include("footer") -%>   

        


